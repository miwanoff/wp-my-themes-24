{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "800px",
      "wideSize": "960px"
    },
    "color": {
      "custom": true,
      "text": true,
      "background": true,
      "link": true,
      "palette": [
        {
          "color": "#f9f9f9",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#111111",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#cfcabe",
          "name": "Accent",
          "slug": "accent"
        },
        {
          "color": "#fff",
          "name": "White",
          "slug": "white"
        },
        {
          "color": "#d5d6d7",
          "name": "BG",
          "slug": "bg"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/post-date": {
        "color": {
          "background": "false"
        }
      }
    },

    "color": {
      "background": "var(--wp--preset--color--bg)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "Roboto, Sans-Serif",
      "fontSize": "16px",
      "fontStyle": "normal",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "textDecoration": "none",
          "fontFamily": "Verdana, Sans-Serif",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
      "link": {
        "color": {
          "text": "#0693E2"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "text": "#0074b7"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "button": {
        ":active": {
          "color": {
            "background": "blue"
          }
        },
        ":focus": {
          "color": {
            "background": "#0074b7"
          }
        },
        ":hover": {
          "color": {
            "background": "#0074b7"
          }
        },
        "border": {
          "radius": "10px"
        },
        "color": {
          "background": "#1398E5",
          "text": "var(--wp--preset--color--white)"
        },
        "spacing": {
          "padding": {
            "bottom": "0.6rem",
            "left": "1rem",
            "right": "1rem",
            "top": "0.6rem"
          }
        },
        "typography": {
          "fontSize": "16px",
          "fontStyle": "normal",
          "fontWeight": "500"
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
