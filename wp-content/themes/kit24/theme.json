{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "800px",
      "wideSize": "960px"
    }
  },
  "styles": {
    "color": {
      "background": "#d5d6d7",
      "text": "#333"
    },
    "typography": {
      "fontFamily": "Roboto, Sans-Serif",
      "fontSize": "16px",
      "fontStyle": "normal",
      "fontWeight": "400",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "textDecoration": "none",
          "fontFamily": "Verdana, Sans-Serif",
          "fontWeight": "600",
          "lineHeight": "1.2"
        }
      },
      "link": {
        "color": {
          "text": "#0693E2"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "text": "#0074b7"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "button": {
        ":active": {
          "color": {
            "background": "blue"
          }
        },
        ":focus": {
          "color": {
            "background": "#0074b7"
          }
        },
        ":hover": {
          "color": {
            "background": "#0074b7"
          }
        },
        "border": {
          "radius": "10px"
        },
        "color": {
          "background": "#1398E5",
          "text": "white"
        },
        "spacing": {
          "padding": {
            "bottom": "0.6rem",
            "left": "1rem",
            "right": "1rem",
            "top": "0.6rem"
          }
        },
        "typography": {
          "fontSize": "16px",
          "fontStyle": "normal",
          "fontWeight": "500"
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
